{
    "name": "hipstercreative/yii2-user-mongo",
    "description": "Flexible user registration and authentication module for Yii2",
    "keywords": ["yii2", "yii2-user-mongo", "user management", "hipstercreative", "hipster", "mongodb", "mongo"],
    "type": "yii2-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/hipstercreative/yii2-user-mongo/issues?state=open",
        "source": "https://github.com/hipstercreative/yii2-user-mongo"
    },
    "authors": [
        {
            "name": "Lee Hilton",
            "email": "lee.hilton@hipstercreative.com",
            "homepage": "http://hipstercreative.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "yiisoft/yii2": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "yiisoft/yii2-authclient": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "codeception/specify": "*",
        "codeception/verify": "*",
        "guzzlehttp/guzzle": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "hipstercreative\\user\\": ""
        }
    },
    "extra": {
        "bootstrap": "hipstercreative\\user\\Bootstrap"
    }
}